	<%= yield :head %>
	<%= yield :stylers %>

	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-2483685-21']);
	  _gaq.push(['_trackPageview']);

	  (function() {
