<br/><p id="notice"><%= notice %></p><br/>

<h2><%= @issue.title %></h2>

<div id="pagecontentwithlinks">  

  <%= @issue.description %>

  <br/><br/><b>Offer: </b>
  $<%= @issue.offer %>

	<br/><br/>
	<div id="generalform">
	<%= form_for :comment, :url=>{:controller=>"comments", :action=>"create", :id=>@issue.id }, :remote => true do |f| %>
		<%= f.text_area "comment", :rows=>3, :cols=>60 %>
		<br>
		<p><%= submit_tag "Add Comment"%></p>
	<% end %>		
	</div>
	
	<% @issue.comments.each do |comment| %>
	
	<div class="bubble">
			<blockquote>
				<p><%= comment.comment %></p><br /><br />
			</blockquote>
			<cite>
				<a href="/<%= comment.issue.user.username%>">
				<% if comment.issue.user.photo %>	
					<img src="<%= comment.issue.user.photo %>" width="100" height="100" />
				<% else %>
					<%= gravatar_image_tag comment.issue.user.email, :class => "gravatar" rescue ""%>
				<% end %>
				<%= comment.issue.user.username.capitalize%></a>
				
				Updated <%= time_ago_in_words comment.created_at %> ago</cite>
	</div>
	
	<% end %>
	

</div>

<%= link_to 'Edit', edit_issue_path(@issue) %> |
<%= link_to 'Back', issues_path %>
