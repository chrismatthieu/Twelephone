<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password digest</th>
    <th>Email</th>
    <th>Twitter</th>
    <th>Facebook</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password_digest %></td>
    <td><%= user.email %></td>
    <td><%= user.twitter %></td>
    <td><%= user.facebook %></td>
    <td><%= user.admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

