<br/><h1>Change Your Password</h1><br/>

<div id="pagecontentwithlinks	">

<div id="photobar">
	<% if @user.photo %>	
		<img src="<%= @user.photo %>" width="100" height="100" />
	<% else %>
		<%= gravatar_image_tag @user.email, :class => "gravatar" rescue ""%>
	<% end %><br/>
	<% if @current_user.id == @user.id %>
		<span style="a:underline"><%= link_to 'Edit Profile', edit_user_path(@user) %> </span>
	<% end %>

</div>

<br/><br/>
<div id="contentwrap">

<div id="generalform">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <p><%= f.submit %> </p>
  </div>
<% end %>
</div>
</div>
</div>
</div>